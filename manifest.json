{
  "manifest_version": 3,
  "name": "YouGlish Word Explorer",
  "version": "1.0",
  "description": "Search and learn English pronunciation with real-world video examples",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://youglish.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
